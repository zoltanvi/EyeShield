<ui:FluentWindow
    x:Class="EyeShield2.Views.Windows.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EyeShield2.Views.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="EyeShield"
    Width="240"
    Height="240"
    MinWidth="100"
    MinHeight="100"
    d:DataContext="{d:DesignInstance local:MainWindow, IsDesignTimeCreatable=True}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    ExtendsContentIntoTitleBar="True"
    Foreground="{DynamicResource TextFillColorPrimaryBrush}"
    WindowBackdropType="Mica"
    WindowCornerPreference="Round"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            x:Name="TitleBar"
            Title="EyeShield"
            Grid.Row="0"
            Height="30"
            CloseWindowByDoubleClickOnIcon="False">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="pack://application:,,,/Assets/icon.png" />
            </ui:TitleBar.Icon>
        </ui:TitleBar>

        <Grid
            Grid.Column="1"
            Grid.Row="1">
            <Border Background="{ui:ThemeResource ControlFillColorDefaultBrush}" />
            <Border Margin="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>

                    <Viewbox
                        Grid.Row="0"
                        Visibility="{Binding ViewModel.IsWork, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ui:TextBlock
                            Text="Work"
                            FontTypography="TitleLarge"
                            Foreground="{ui:ThemeResource SystemAccentColorPrimaryBrush}"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Viewbox>

                    <Viewbox
                        Grid.Row="0"
                        Visibility="{Binding ViewModel.IsRest, Converter={StaticResource BoolToVisibilityConverter}}">
                        <ui:TextBlock
                            Text="Rest"
                            FontTypography="TitleLarge"
                            Foreground="{ui:ThemeResource SystemFillColorSuccessBrush}"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Viewbox>


                    <Viewbox
                        Grid.Row="1"
                        Margin="10 0">
                        <Label
                            Name="TimerLabel"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="36"
                            Content="{Binding ViewModel.TimerDisplay}"
                            Grid.Row="1" />

                    </Viewbox>
                    <ui:Button
                        Appearance="Info"
                        Name="StartStopButton"
                        Content="{Binding ViewModel.ButtonText}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Bottom"
                        Margin="0 0 0 40"
                        Width="100"
                        Command="{Binding ViewModel.StartStopCommand}"
                        Grid.Row="2" />


                </Grid>
            </Border>
        </Grid>

        <Border Grid.Row="2">
            <ProgressBar
                Maximum="{Binding ViewModel.MaxProgress}"
                Value="{Binding ViewModel.Progress}"
                Height="10" />
        </Border>

    </Grid>
</ui:FluentWindow>
